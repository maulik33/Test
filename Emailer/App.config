<?xml version="1.0"?>
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
    </configSections>
    <appSettings>
        <!-- Application Link locations -->
        <add key="studentAppLink" value="https://kaplanlwwtesting.kaplan.com/s_login.aspx"/>
        <add key="adminAppLink" value="https://kaplanlwwtesting.kaplan.com/a_login.aspx"/>

        <!-- Service specific items -->
        <add key="runtimeInterval" value="30000"/>

        <add key="TempDir" value="C:\Temp"/>

        <!-- Server specific items -->
        <add key="mailServer" value="smtp.int.kaplan.com"/>
        <add key="mailFrom" value="integrated.support@kaplan.com"/>

        <!--Email Confirmation Addresses-->
        <add key="confirmationMailId" value="Swapna.Muppidi@kaplan.com"/>      
        <!--Uncomment the below and comment the above address for Production environment-->
        <!--<add key="confirmationMailId" value="RN.Emailer@kaplan.com"/>-->
      
      
    </appSettings>
    <connectionStrings>
        <add name="NursingEmailer" connectionString="Data Source=dkny3wdev01.kaplaninc.com;Initial Catalog=NursingRN_Dev;User ID=nursing;Password=H@lo3beta3;MultipleActiveResultSets=true;"/>
    </connectionStrings>
    <log4net>
        <!-- Define some output appenders -->
        <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
            <file value=".\logs\EmailServiceLog.txt"/>
            <appendToFile value="true"/>
            <maxSizeRollBackups value="10"/>
            <maximumFileSize value="1000KB"/>
            <rollingStyle value="Size"/>
            <staticLogFileName value="true"/>
            <layout type="log4net.Layout.PatternLayout">
                <header value="------------------------------------------------"/>
                <footer value="------------------------------------------------"/>
                <conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline"/>
            </layout>
        </appender>
        <!-- Setup the root category, add the appenders and set the default level -->
        <root>
            <level value="ALL"/>
            <appender-ref ref="RollingLogFileAppender"/>
        </root>
        <!-- Specify the level for some specific categories -->
        <logger name="Logger">
            <level value="ALL"/>
            <appender-ref ref="RollingLogFileAppender"/>
        </logger>
    </log4net>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
    </startup>
</configuration>
