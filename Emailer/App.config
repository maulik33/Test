<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <appSettings>
    <!-- Application Link locations -->
    <add key="studentAppLink" value="https://nursing.kaplan.com/s_login.aspx"/>
    <add key="adminAppLink" value="https://nursing.kaplan.com/a_login.aspx"/>
    
    <!-- Service specific items -->
    <add key="runtimeInterval" value="30000"/>
    
    <!-- Server specific items -->
    <add key="mailServer" value="smtp.int.kaplan.com"/>
    <add key="mailFrom" value="integrated.support@kaplan.com"/>
  </appSettings>
  <connectionStrings>
    <add name="NursingEmailer" connectionString="Data Source=dkny3wdev01.kaplaninc.com;Initial Catalog=NursingRnMockStage;User ID=nursing;Password=H@lo3beta3"/>
    <!--<add name="NursingEmailer" connectionString="Data Source=dkny3wdev01.kaplaninc.com;Initial Catalog=NursingRN_Dev;Persist Security Info=True;User ID=kapnurse;Password=test"/>-->
  </connectionStrings>
  <log4net>
    <!-- Define some output appenders -->
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value=".\logs\EmailServiceLog.txt" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="1000KB" />
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <header value="------------------------------------------------&#13;&#10;" />
        <footer value="------------------------------------------------&#13;&#10;" />
        <conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline" />
      </layout>
    </appender>
    <!-- Setup the root category, add the appenders and set the default level -->
    <root>
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
    </root>
    <!-- Specify the level for some specific categories -->
    <logger name="Logger">
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
    </logger>
  </log4net>
</configuration>